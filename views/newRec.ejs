<html lang="en">

   <%- include header %>

   <body>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
                                                           
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">New Recommendation</div>
                        </div> 
                        <div class="panel-body" >
                            <form class="form-horizontal" role="form" method="post" action="/menu/newRec" onSubmit="return checkblank(this);">
                                <% if (message == "New recommendation posted successfully.") { %>
                                    <div class="alert alert-success col-sm-12"><%= message %></div>
                                <% } %>
                                <% if (message == "Only local users can post recommendations.") { %>
                                    <div class="alert alert-danger col-sm-12"><%= message %></div>
                                <% } %>
                                
                                <div class="form-group">
                                    <label for="title" class=" col-md-9 col-lg-9 ">What is the name of the place you are recommending? This will be the title.</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="title" placeholder="...">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="rec_text"class=" col-md-9 col-lg-9 ">Please describe your experience here. Let others know why you reccommend going here.</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="rec_text" placeholder="...">
                                    </div>
                                </div>
                                

                                <div class="form-group">
                                    <label for="category" class="col-md-9 col-lg-9">Category</label>
                                        <div class="input-group mb-3">
                                            <select name="category" class="custom-select col-md-9 col-lg-9 form-control" id="category">
                                                <option selected>Choose...</option>
                                                <option value="food">Food</option>
                                                <option value="museums">Museums</option>
                                                <option value="zoos">Zoos</option>
                                                <option value="parks">Parks</option>
                                            </select>
                                        </div>
                                </div>
                                
                            
 

                                <div class="form-group">
                                    <!-- Button -->                                       
                                    <div class=" col-md-9 col-lg-9 ">
                                        <button id="btn-newRec" type="submit" class="btn btn-primary">Post New Rec</button>
                                        
                                    </div>
                                </div>
                               
                                
                                
                                
                            </form>
                         </div>
                    </div>
              
                
         </div>
     </div>
    </body>
   
    <%- include footer %>